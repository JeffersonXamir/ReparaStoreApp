<UserControl x:Class="ReparaStoreApp.WPF.Views.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="20">
        <!-- Tarjeta principal -->
        <ui:CardControl Margin="0,0,0,20" Padding="20">
            <StackPanel>
                <ui:TextBlock Text="{Binding Titulo}" FontTypography="Title" Margin="10"/>
                
                <ui:TextBlock Text="Bienvenido a ReparaStore" 
                           FontTypography="Title"
                           Margin="0,0,0,10"/>

                <ui:TextBlock Text="{Binding WelcomeMessage}" 
                           FontTypography="Subtitle" 
                           Margin="0,0,0,20"/>

                <ui:Button Content="Ver Estadísticas" 
                       Appearance="Primary"
                       cal:Message.Attach="[Event Click] = [Action ShowStatistics]"/>
            </StackPanel>
        </ui:CardControl>

        <!-- Sección de estadísticas rápidas -->
        <ItemsControl ItemsSource="{Binding QuickStats}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" Margin="0,20,0,0"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardControl Margin="5" Padding="15">
                        <StackPanel>
                            <ui:TextBlock Text="{Binding Title}" 
                                       FontTypography="Subtitle"
                                       Margin="0,0,0,5"/>
                            <ui:TextBlock Text="{Binding Value}" 
                                       FontTypography="Title"
                                       FontSize="24"
                                       Margin="0,0,0,5"/>
                            <ui:TextBlock Text="{Binding Description}" 
                                       FontTypography="Caption"
                                        />
                        </StackPanel>
                    </ui:CardControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>